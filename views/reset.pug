extends  layout
block content
        .inner
            form.form(method="POST"  class="formLogin login")
                h2 Zresetuj swoje hasło
                div(class="formLoginElement")
                    label(for="password" class="label-name") Nowe hasło   
                    input(type="password" name="password" required) 
                div(class="formLoginElement")
                    label(for="password-confirm" class="label-name")  Powtórz hasło   
                    input(type="password" name="password-confirm" required) 


                input.button(type="submit" value="Zresetuj")